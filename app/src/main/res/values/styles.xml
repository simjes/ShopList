<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application or activity -->
    <style name="CustomTheme" parent="@android:style/Theme.Material">
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
        <item name="android:colorBackground">@color/listBackgroundColor</item>
        <item name="android:statusBarColor">@color/darkPrimaryColor</item>
        <item name="android:colorControlHighlight">@color/itemRipple</item>
    </style>

    <!-- ActionBar styles -->
    <style name="CustomActionBar">
        <item name="android:background">@color/primaryColor</item>
        <item name="android:windowBackground">@color/primaryColor</item>
        <item name="android:elevation">2dp</item>
        <item name="android:displayOptions">showHome|showTitle</item>
    </style>

</resources>